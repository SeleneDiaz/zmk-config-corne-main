#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    combos {
        compatible = "zmk,combos";

        combo_enter {
            bindings = <&kp ENTER>;
            key-positions = <20 21>;
            layers = <0 1>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        win_main {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&kp TAB           &kp Q  &kp W  &kp E         &kp R  &kp T                      &kp Y                  &kp U        &kp I          &kp O    &kp P          &kp EQUAL
&kp BACKSPACE     &kp A  &kp S  &lt 5 D       &kp F  &kp G                      &kp H                  &kp J        &kp K          &kp L    &kp SEMICOLON  &kp APOSTROPHE
&kp LEFT_BRACKET  &kp Z  &kp X  &kp C         &kp V  &kp B                      &kp N                  &kp M        &kp COMMA      &kp DOT  &kp SLASH      &kp RIGHT_BRACKET
                                &kp LEFT_WIN  &mo 2  &mt LEFT_CONTROL ESCAPE    &mt RIGHT_SHIFT ENTER  &lt 3 SPACE  &kp RIGHT_ALT
            >;
        };

        mac_main {
            bindings = <
&trans  &trans  &trans  &trans            &trans  &trans                 &trans  &trans       &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans            &trans  &trans                 &trans  &trans       &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans            &trans  &trans                 &trans  &trans       &trans  &trans  &trans  &trans
                        &kp LEFT_CONTROL  &trans  &mt LEFT_GUI ESCAPE    &trans  &lt 4 SPACE  &trans
            >;
        };

        numbers_symbols {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BSPC |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&kp BACKSLASH     &kp EXCL        &kp AT         &kp POUND         &kp DOLLAR       &kp PERCENT    &kp CARET      &kp AMPERSAND   &kp ASTERISK  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp PLUS
&kp COLON         &kp NUMBER_1    &kp NUMBER_2   &kp NUMBER_3      &kp NUMBER_4     &kp N5         &kp N6         &kp N7          &kp N8        &kp N9                &kp N0                 &kp MINUS
&kp LEFT_BRACKET  &kp LEFT_BRACE  &kp LESS_THAN  &kp GREATER_THAN  &kp RIGHT_BRACE  &kp TILDE      &kp GRAVE      &kp PIPE        &kp COMMA     &kp PERIOD            &kp SLASH              &kp RIGHT_BRACKET
                                                 &trans            &trans           &trans         &kp LS(ENTER)  &kp UNDERSCORE  &tog 1
            >;
        };

        win_arrows_functions {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BSPC |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans  &trans                  &trans  &trans              &trans                   &trans            &kp HOME        &kp PAGE_DOWN   &kp PAGE_UP   &kp END          &kp PRINTSCREEN  &trans
&trans  &kp LG(LC(LEFT_ARROW))  &trans  &trans              &kp LG(LC(RIGHT_ARROW))  &trans            &kp LEFT_ARROW  &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT_ARROW  &kp DELETE       &trans
&trans  &kp LEFT_CONTROL        &trans  &trans              &trans                   &trans            &trans          &trans          &trans        &trans           &trans           &trans
                                        &kp LA(LC(DELETE))  &trans                   &kp LEFT_SHIFT    &trans          &trans          &trans
            >;
        };

        mac_arrows_functions {
            bindings = <
&trans  &trans        &trans  &trans  &trans  &trans            &kp LG(LEFT_ARROW)  &kp PAGE_DOWN   &kp PAGE_UP   &kp LG(RIGHT_ARROW)  &kp LS(LG(NUMBER_4))  &trans
&trans  &trans        &trans  &trans  &trans  &trans            &kp LEFT_ARROW      &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT_ARROW      &kp DELETE            &trans
&trans  &kp LEFT_ALT  &trans  &trans  &trans  &trans            &trans              &trans          &trans        &trans               &trans                &trans
                              &trans  &trans  &kp LEFT_SHIFT    &trans              &trans          &trans
            >;
        };

        calc_and_bluetooth {
            bindings = <
&bt BT_CLR    &kp F9  &kp F10  &kp F11       &kp F12  &bt BT_SEL 2    &none      &kp N7        &kp N8        &kp N9        &kp ASTERISK  &kp SLASH
&bt BT_SEL 0  &kp F5  &kp F6   &kp F7        &kp F8   &bt BT_SEL 3    &none      &kp NUMBER_4  &kp N5        &kp NUMBER_6  &kp PLUS      &kp MINUS
&bt BT_SEL 1  &kp F1  &kp F2   &kp F3        &kp F4   &bt BT_SEL 4    &none      &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp DOT       &kp COLON
                               &out OUT_TOG  &none    &none           &kp EQUAL  &kp N0        &none
            >;
        };
    };
};
